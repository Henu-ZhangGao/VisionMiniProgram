}
.tab{ 
  display:table-cell;
  vertical-align:middle;
}
.kedu{
  display: inline-block;
  color:rgb(0, 0, 0);
  font-size: 1em;
  transform: rotate(90deg);
}
.left1em{
  margin-left: calc(100% - 0.3em);
}
.left2em{
  margin-left: calc(100% - 0.65em);
}
.left3em{
  margin-left: calc(100% - 0.82em);
}
.cursor_box{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 2;
  position: absolute;
  bottom: 62%;
  margin-bottom: -30rpx;
}
