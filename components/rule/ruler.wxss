.unit_box{
  height: 100%;
  width: 90rpx;
  border-top-left-radius: 70%;
  border-bottom-left-radius: 70%;
  background: rgb(0, 0, 0);
  background: rgba(255,255,255,0.2);
  /* position: absolute; */
  /* right: 0; */
