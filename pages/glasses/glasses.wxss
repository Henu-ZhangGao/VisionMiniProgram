/* pages/glasses/glasses.wxss */
page{
  background-color: black;
}
.img{
  margin:0px;
  width:100vw;
  height:80vh;
}
.container {
  height: 100%;
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  text-align: center;
  padding: 0px;
} 
.imgContainer{
  width:100vw;
  height:79vh;
  overflow:hidden;
}
.button_container{
  margin:1vh 0px;
  height:19vh;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
/* 按钮未选中 */

.normal_button{
  background: black;
  color: white;
}
/* 按钮选中 */
.checked_button{
  background: white;
  color: black;
  border-radius: 50%;
}
.canvas_container{
  position: absolute;
  width: 100%;
  height: 80vh;
}
.btnContainer{
  position: absolute;
  right: 5%;
  top: 5%;
  border-radius: 50%;
  width: 10%;
  color: black;
}
.btn .wx-button-cover-view-wrapper .wx-button-cover-view-inner{
  background-color: #ffffff;
  width: 42%;
}