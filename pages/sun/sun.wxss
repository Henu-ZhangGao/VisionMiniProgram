/* pages/sun/sun.wxss */
page{
  background: black;
}
.container {
  height: 100%;
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  text-align: center;
} 
.img{
  width: 100%;
}
.button_container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10%;
}
/* 按钮未选中 */
.normal_button{
  background: black;
  color: white;
}
/* 按钮选中 */
.checked_button{
  background: white;
  color: black;
  border-radius: 50%;
}