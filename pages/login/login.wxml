<!--pages/login/login.wxml-->
<view class="container"> 
 
 <view class="login-icon"> 
 <image class="login-img" mode="aspectFit" src="http://139.196.151.36:8080/img/title.png"></image> 
 </view> 
 <view class="login-from"> 
 
 <!--账号-->
 <view class="inputView"> 
  <view class="loginLab"><text>账号</text></view>
  <view class="inputText"><input style="height:100%;" placeholder="请输入账号" bindinput="usernameInput" /></view>
</view>
 <view class="line"></view> 
 
 <!--密码-->
 <view class="inputView"> 
  <view class="loginLab"><text>密码</text></view>
  <view class="inputText"><input password="true" style="height:100%;"  placeholder="请输入密码" bindinput="passwordInput" /></view>
 </view> 
 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
 </view> 
 </view> 
</view>