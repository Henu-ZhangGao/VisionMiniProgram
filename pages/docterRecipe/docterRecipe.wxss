/* pages/docterRecipe/docterRecipe.wxss */
.headline{
  font-size: 2em;
  font-weight: 800;
}
.headline_1{
  font-size:1em;
  font-weight: 600;
}
.headline_2{
  font-size: 0.9em;
  width:25%;
}
.row{
  display: flex;
  flex-direction: row;
  margin:1% 0px;
  justify-content: space-around;
  width: 100vw;
}
.row_1{
  display: flex;
  flex-direction: row;
  margin-right: 3vw;
}
.bg_1{
  background-color: #ff9bf0;
}
.bg_2{
  background-color:#3e96fc;
}
.bg_3{
  background-color: #EEEEEE;
}
.radio_group{
  display:flex;
  font-size: 0.5em;
}
.checkbox{
  font-size: 0.9em;
}
.check_group{
  width: 85vw;
}
.input{
  border-style: solid;
  border-width: 0.1vw;
  border-color: #999999;
  width: 12vw;
  margin-right:2vw ;
}
.selectionbar{
  display: flex;
  flex-direction: row;
  width: 15%;
  height: 100%;
  margin: 0px 0.5%;
}
.selectionbar_btn{
  min-width: 1%;
  width: 1%;
  font-size: 0.1;
  padding:0px;
  margin: 0px;
}
.input_1{
  width:100%;
  min-width: 40%;
  min-height: 100%;
  margin: 0px 1%;
}
.table-wrap{
  height: auto;
  overflow-y: scroll;
  overflow-x: hidden;
}
/* 表格代码   */
.table {
  border:1px solid #dddddd;
  border-right:0;
  border-bottom: 0;
  width: 97vw;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: auto;
  align-items: center;
  border-bottom: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
}
.td {
  width: 34%;
  justify-content: center;
  align-items: center;
  color: #4f4f4f;
  display: flex;
  font-size: 25rpx;
  height: 100%;
}
/*
用于列表隔行的颜色变化
*/
.tdColor{
  background:#f7f7f7;
}
/*
表头颜色
*/
.thColor{
  background:#eff3f5;
}
.th {
  width: 34%;
  justify-content: center;
  align-items: center;
  color: #4f4f4f;
  display: flex;
  height: 99%;
  font-weight: 600;
  border-bottom: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
}
.td1{
  width: 20%;
  font-weight: 800;
  font-size: 0.9em;
}
.td2{
  width:80%;
}
.select_box{
  background: #fff;
  width: 100%;
  margin: 0px;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border:1px solid #efefef;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 10rpx;
  flex: 1;
}
.select_img{
  width: 30%;
  height: 30%;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  z-index: 100;
  position: absolute;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}