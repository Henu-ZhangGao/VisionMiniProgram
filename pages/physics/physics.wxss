/* pages/physics/physics.wxss */
page{
  background-color: black;
  padding: 5vh 0px;
}
.container{
  height: 100%;
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  text-align: center;
}
.mycanvas{
  width: 100%;
  height: 80vh;
}
.button_container{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 15vh;
}
/* 按钮未选中 */
.normal_button{
  
  background: black;
  color: white;
}
/* 按钮选中 */
.checked_button{
  margin: 0%;
  background: white;
  color: black;
  border-radius: 50%;
}