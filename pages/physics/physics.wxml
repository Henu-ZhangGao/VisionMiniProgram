<!--pages/physics/physics.wxml-->
<!-- 这是镜片折射率 -->
<view class="contain">
  <view style="flex-direction:row;display:flex;">
    <view style="width:100%">
      <canvas class="mycanvas" canvas-id="convex_mirror" style="background:#000;"></canvas>
    </view>
    <view style="flex-direction:column;width:15%;height:80vh;">
      <block wx:for="{{buttons}}" wx:key="buttons">
        <button style="width:100%;margin:10% 0px" class='{{item.checked?"checked_button":"normal_button"}}' data-name="{{item.name}}" data-id='{{item.id}}' bindtap='radioButtonTap'>{{item.name}}</button>
      </block>
   </view>
  </view>
  <view class="button_container">
    <block wx:for="{{buttons_1}}" wx:key="buttons_1">
      <button class='{{item.checked?"checked_button":"normal_button"}}' style="width:100%;height:100%;" data-name="{{item.name}}" data-id='{{item.id}}' bindtap='radioButtonTap_1'>{{item.name}}</button>
    </block>
  </view>
</view>
