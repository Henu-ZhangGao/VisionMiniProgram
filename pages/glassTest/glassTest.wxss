/* pages/glassTest/glassTest.wxss */
text {
  font-size: larger;
}
.btn {
  min-width: 10vw;
  border: 1px solid black;
  margin: 8% 0px;
  height: 30%;
  font-size: 0.8em;
}
.btn1 {
  color: red;
  border: 1px solid red;
}
.btnTop {
  width: 9vw;
  height: 8vh;
  padding: 0.5%;
  margin: 0px 5%;
}
.btnFloat {
  position: absolute;
  width: auto;
  height: 12%;
  background-color: black;
  border: black 1px;
  border-radius: 20%;
  left: 1%;
  top: 30%;
  z-index: 1000;
}
.moveContainer {
  position: absolute;
}
.moveArea1 {
  left: 11%;
  width: 59%;
  height: 60%;
  display: flex;
  flex-direction: column;
}
.moveArea2 {
  width: 85%;
  height: 60%;
  top: 20%;
}
.text {
  width: 40%;
  min-width: 40%;
  color: white;
}
input {
  border: 3px solid rgba(0, 0, 0, 0.541);
  border-radius: 7%;
}
.placeholder {
  color: grey;
}
.textContainer {
  width: 50%;
  display: flex;
}
.textContainer_ {
  display: flex;
  flex-direction: column;
  color: red;
  background: #3b3b3b2a;
}
.imgbgContainer {
  position: absolute;
  left: 0px;
  top: 0px;
  width: 80%;
  height: 100%;
  z-index: -100;
}
.imgContainer {
  width: 100%;
  height: 20%;
}
.imgContainer_ {
  width: 6%;
  height: 100%;
}
.imgbg {
  width: 100%;
  height: 100%;
}
.img {
  width: 100%;
  height: 100%;
  z-index: 1000;
}
.canvas {
  width: 100%;
  height: 100%;
  z-index: 1000;
}
.canvasVice {
  left: 100%;
  width: 100%;
  height: 100%;
  position: absolute;
  /* display: none; */
}
.canvasContainer {
  width: 85vw;
  display: flex;
  justify-content: center;
  align-items: center;
  height: auto;
}
.change {
  border-radius: 50%;
}
.row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.col {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.btnGroup {
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 70%;
  padding: 10% 10%;
}
.bottom {
  width: 100vw;
  height: 100%;
}
.tableContainer {
  color: #ff4f4f;
  font-size: 1.3em;
  position: absolute;
  top: 15vh;
  right: 15vw;
  display: flex;
  flex-direction: column;
  z-index: 0;
}
.tableContainer_1 {
  color: #ff4f4f;
  font-size: 1.3em;
  position: absolute;
  z-index: 999;
  top: 35%;
  left: 1%;
  width: 50%;
  display: flex;
  flex-direction: column;
  height: auto;
}
.table {
  display: flex;
  flex-direction: row;
  align-content: space-around;
  align-items: center;
}
.su-td {
  width: 33%;
  align-content: space-around;
  display: flex; /*此元素会作为一个表格单元格显示（类似 <td> 和 <th>）*/
  text-align: center;
  align-items: center;
  border: 1px solid #69696960;
  font-size: 0.6em;
}
.su-th {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #dddddd81;
}
.su-tr {
  align-items: center;
  align-content: space-around;
  display: flex; /*此元素会作为一个表格行显示（类似 <tr>）*/
  background-color: #3100a53d;
  width: 100%;
  font-size: 1.5em;
  height: 20%;
}
